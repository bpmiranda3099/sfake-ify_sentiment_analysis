{
  "version": 2,
  "builds": [
    {
      "src": "vercel_app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/analyze-sentiment",
      "dest": "vercel_app.py"
    },
    {
      "src": "/music-search",
      "dest": "vercel_app.py"
    },
    {
      "src": "/music-fetch",
      "dest": "vercel_app.py"
    },
    {
      "src": "/music-lyrics",
      "dest": "vercel_app.py"
    },
    {
      "src": "/diagnostics",
      "dest": "vercel_app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
